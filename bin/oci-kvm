_CUT=/usr/bin/cut
_pY=/usr/bin/python
_PY2=/usr/bin/python2
_PY3=/usr/bin/python3

. /etc/os-release

major=`echo $VERSION_ID | ${_CUT} -d. -f1`
if [ ${major} -ge 8 ] && [ -x ${_PY3} ]
then
   #priority given to python3
  _PY=${_PY3}
else
    if [ -x ${_PY2} ]
    then
	_PY=${_PY2}
    fi
fi
# find where actual script is.
s_dir=`${_PY} -c 'import os.path ; import oci_utils.impl.virt ; print (os.path.dirname(oci_utils.impl.virt.__file__))'`
exec ${_PY}  ${s_dir}/oci-kvm-main.py $@


