.I DISK_SIZE
.B ] -V|--virt
.I VIRT-INSTALL_ARGS

.B oci-kvm destroy -D|--domain
.I NAME
.B [--destroy-disks]

.B oci-kvm create-pool  -n|--name
.I NAME
.B {-d
.I DEVICE
.B |-N
